upstream backend {
    {{ deploy_angie_balance_method | default('') }}
    server  10.10.5.102:80 fail_timeout=10s max_fails=2;
    server  10.10.5.103:80 fail_timeout=10s max_fails=2;
}

server {
    listen               80;

    location / {
        proxy_pass             http://backend;
        proxy_set_header       X-Real-IP $remote_addr;
        proxy_set_header       X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_connect_timeout  5s;
    }
}
